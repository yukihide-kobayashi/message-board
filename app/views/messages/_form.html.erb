<%= form_for(@message) do |f| %>

  <div class="form-group">
    <%= f.label :name, "名前" %>
    <%= f.text_field :name, class: "form-control" %>
  </div>
  
  <div class="form-group">
    <%= f.label :body, "内容" %>
    <%= f.text_area :body, class: "form-control", rows: 5 %>
  </div>

  <div class="form-group">
    <%= f.submit class: "btn btn-sm btn-primary" %>
  </div>
<% end %>